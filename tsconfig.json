{
    "compilerOptions":{
        "types":[
            "node"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "version": true,
        "target": "ES6",
        "jsx": "React"
    },
    "include": [
        "src/**/*"
    ],
    "exclude":[
        "node_modules",
        "**/*.spec.ts",
        "**/__tests__/*.tsx"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}
